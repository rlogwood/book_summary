<div class="p-10">
  <h2 class="text-4xl">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="my-5 flex">
      <%= f.label :email, class: "field-label" %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-text" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="my-5 flex">
      <%= f.label :password, class: "field-label" %> <i>(leave blank if you don't want to change it)</i><br/>
      <%= f.password_field :password, autocomplete: "new-password", class: "field-text" %>
      <% if @minimum_password_length %>
        <br/>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="my-5 flex">
      <%= f.label :password_confirmation, class: "field-label" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field-text" %>
    </div>

    <div class="my-5 flex">
      <%= f.label :current_password, class: "field-label" %>
      <i>(we need your current password to confirm your changes)</i><br/>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "field-text" %>
    </div>

    <div class="actions">
      <%= f.submit "Update",
                   class: "form-button",
                   data: { action: "click->form#submit_pressed", form_target: "submit" } %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

  <%= link_to "Back", :back, class: "form-link" %>
</div>
