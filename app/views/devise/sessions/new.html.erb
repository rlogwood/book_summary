<div class="p-10">
  <h2 class="text-4xl">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="my-5 flex ">
      <%= f.label :email, class: "field-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-text" %>
    </div> <%# /email %>

    <div class="my-5 flex ">
      <%= f.label :password, class: "field-label" %>
      <%= f.password_field :password, autocomplete: "current-password",
                           class: "field-text" %>

    </div> <%# /password %>

    <% if devise_mapping.rememberable? %>
      <div class="my-5 flex items-center">
        <%= f.check_box :remember_me, class:"mr-1" %>
        <%= f.label :remember_me, class:"" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Login", class: "form-button",
                   data: { action: "click->form#submit_pressed", form_target: "submit" } %>
    </div>
  <% end %>

  <div class="mt-5">
    <%= render "devise/links" %>
  </div>
</div>