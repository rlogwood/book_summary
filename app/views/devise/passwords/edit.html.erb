<div class="p-10">
  <h2 class="text-4xl">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="my-5 flex">
      <%= f.label :password, "New password", class: "field-label" %><br/>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "field-text" %>
    </div>

    <% if @minimum_password_length %>
      <div class="text-xs sm:text-lg -mt-3">
        <em><%= @minimum_password_length %> characters minimum</em>
      </div>
    <% end %>

    <div class="my-5 flex">
      <%= f.label :password_confirmation, "Confirm new password", class: "field-label" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field-text" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

